---
export interface Props {
  title: string
  description: string
  publishDate: string
  url: string
}

const { title, description, publishDate, url } = Astro.props as Props
---

<article class="post-preview">
  <header>
    <time>{publishDate}</time>
    <h1 class="title">{title}</h1>
  </header>
  <p>{description}</p>
  <a href={url}>Continue reading ...</a>
</article>

<style>
  .post-preview {
    padding-bottom: 2rem;
    margin-bottom: 2rem;
    border-bottom: 4px solid var(--theme-divider);
  }

  .title,
  time {
    margin: 0;
  }

  time {
    font-size: 1.25rem;
    color: var(--theme-text-light);
  }

  .title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--theme-text);
  }
</style>
